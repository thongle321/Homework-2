<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">
<meta name="Description" content="Enter your description here"/>
<%- include('partials/lib') %>
<%- include('partials/navbar') %>
<title>Title</title>
</head>
<body>
    <div class="container">
        <h1>Danh Sách Tài Khoản</h1>
        <table class="table" table-hover table-striped>
            <thead class="table-dark">
                <tr>
                    <th>Ảnh đại diện</th>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Mật Khẩu</th>
                    <th>Chức Năng</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(item => { %>
                 <tr>
                    <td>
                        <img src="images/avatar/<%= item.avatar %>" style="width: 100px;">
                    </td>
                    <td><%= item.id %></td>
                    <td><%= item.username %></td>
                    <td><%= item.password %></td>
                    <td><a href="/users/<%= item.id %>"><button class="btn btn-primary" type="button"><i class="fa fa-user" aria-hidden="true"></i></button></a>
                        
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>